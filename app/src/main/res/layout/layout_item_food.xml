<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/image_view"
            app:layout_constraintDimensionRatio="576:330"
            android:layout_width="120dp"
            android:layout_height="0dp"
            tools:src="@drawable/foody_restaurant_sanfulou"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/text_view_title_close_time"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Đóng cửa \n Mở cửa vào lúc 07:00"
            android:background="#CC000000"
            android:maxWidth="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="120dp"
            app:layout_constraintDimensionRatio="300:200"
            android:layout_height="0dp"/>

        <TextView
            android:layout_marginStart="5dp"
            android:textColor="#383838"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintBottom_toTopOf="@id/text_view_address"
            android:id="@+id/text_view_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            tools:text="San Fu Lou - Ẩm Thực Quảng Đông - Lê Lai"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="5dp"
            android:textColor="#A1A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_name"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintBottom_toTopOf="@id/text_view_service_kind"
            android:id="@+id/text_view_address"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxWidth="250dp"
            android:maxLines="1"
            tools:text="Tầng Trệt, AB Tower, 76A Lê Lai, P.Bến Thành, Quận 1, TP. HCM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="5dp"
            android:textColor="#131313"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_address"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintBottom_toTopOf="@id/text_view_discount"
            app:layout_constraintHorizontal_bias="0"
            android:id="@+id/text_view_service_kind"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            tools:text="Nhà Hàng - Gia đình - Hội nhóm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="5dp"
            android:textColor="#131313"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_service_kind"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/text_view_discount"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Buổi sáng - 10%"
            android:drawableLeft="@drawable/ic_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintVertical_bias="0.8"
            android:textAlignment="center"
            android:textColor="#A1A0A0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/text_view_distance"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="1"
            tools:text=">15.0km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>